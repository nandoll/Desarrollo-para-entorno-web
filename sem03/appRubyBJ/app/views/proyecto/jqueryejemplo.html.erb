<%= javascript_include_tag 'proyecto', 'data-turbolinks-track': 'reload' %>

<div class="row">
    <div class="col">
        <h1>Uso de JQuery</h1>
        <hr>
        <form class="needs-validation" novalidate>
            <div class="form-row mb-3">
                <!-- Select-->
                <div class="col text-md-right">
                    <label>Tipo de operación</label>
                </div>
                <div class="col">
                    <select class="form-control operacion" required>
                        <option value="">Seleccione operación</option>
                        <option value=" + ">Suma (+) </option>
                        <option value=" - ">Resta (-)</option>
                        <option value=" * ">Multiplicación (*)</option>
                        <option value=" / ">División (/)</option>
                    </select>     
                    <span class="invalid-feedback">Debe elegir una operación</span>       
                </div>
                <!-- / Select-->
            </div>
            
            <!-- Operación -->
            <div class="form-row mb-3">
                <div class="col text-md-right">
                    <label> Valor 1</label>
                </div>
                <div class="col">
                    <input class="form-control valor1" type="text" placeholder="Ingrese valor" required>
                    <span class="invalid-feedback">Debe ingresar este campo</span>
                </div>
            </div>
            <!-- / Operación -->

            <!-- Operación -->
            <div class="form-row mb-3">
                <div class="col text-md-right">
                    <label> Valor 2</label>
                    
                </div>
                <div class="col">
                    <input class="form-control valor2" type="text" placeholder="Ingrese valor" required>
                    <span class="invalid-feedback">Debe ingresar este campo</span>
                </div>
            </div>
            <!-- / Operación -->

            <div class="form-row mb-3">
                <div class="col text-center">
                <button type="button" class="btn btn-secondary">Limpiar form</button>
                <button type="submit" class="btn btn-success">Calcular</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Button trigger modal 
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>-->

<!-- Modal -->
<div class="modal fade" id="modalResultado" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Resultado de operación</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
      </div>
      <div class="modal-footer">        
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>